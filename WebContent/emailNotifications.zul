<?init class="org.gobiiproject.datatimescope.services.AuthenticationInit"?>

<vlayout apply="org.zkoss.bind.BindComposer" viewModel="@id('vm') @init('org.gobiiproject.datatimescope.controller.WebConfigViewModel')" >
    <grid id="emailGrid" width="500px">
        <columns>
            <column align="right" hflex="min"/>
            <column/>
        </columns>
        <rows>
            <row>
                <cell sclass="row-title">E Mail Server Type:</cell>
                <cell> <textbox disabled="@load(vm.documentLocked)" constraint="no empty"
                        width="200px" value="@load(vm.xmlHandler.emailSvrType) @save(vm.xmlHandler.emailSvrType, before='disableEdit')">
                </textbox>
                </cell>
            </row>
            <row>
                <cell sclass="row-title">E Mail Server Domain:</cell>
                <cell>
                    <textbox constraint="no empty"
                            width="200px" value="@load(vm.xmlHandler.emailSvrDomain) @save(vm.xmlHandler.emailSvrDomain, before='disableEdit')" disabled="@load(vm.documentLocked)">
                    </textbox>
                </cell>
            </row>
            <row>
                <cell sclass="row-title">E Mail Server User:</cell>
                <cell>
                    <textbox constraint="no empty, /.+@.+\.[a-z]+/: Please enter a valid email address."
                            width="200px" value="@load(vm.xmlHandler.emailSvrUser) @save(vm.xmlHandler.emailSvrUser, before='disableEdit')" disabled="@load(vm.documentLocked)"/>
                </cell>
            </row>
            <row>
                <cell sclass="row-title">E Mail Server Hash Type:</cell>
                <cell>
                    <textbox  constraint="no empty" width="200px"
                              value="@load(vm.xmlHandler.emailSvrHashType) @save(vm.xmlHandler.emailSvrHashType, before='disableEdit')" disabled="@load(vm.documentLocked)"/>
                </cell>
            </row>
            <row>
                <cell sclass="row-title">E Mail Server Password:</cell>
                <cell>
                    <textbox constraint="no empty" type="password" width="200px"
                            value="@load(vm.xmlHandler.emailSvrPassword) @save(vm.xmlHandler.emailSvrPassword, before='disableEdit')" disabled="@load(vm.documentLocked)"/>
                </cell>
            </row>
            <row>
                <cell sclass="row-title">E Mail Server Port:</cell>
                <cell>
                    <intbox constraint="no empty, no negative, no zero" width="200px"
                            value="@load(vm.xmlHandler.emailServerPort) @save(vm.xmlHandler.emailServerPort, before='disableEdit')" disabled="@load(vm.documentLocked)"/>
                </cell>
            </row>
        </rows>
    </grid>
    <div align="left">
        <button id="edit" label="Edit" onClick="@command('enableEdit')" visible="@bind(vm.documentLocked)" />
        <hlayout>
            <button id="save" label="Save" onClick="@command('warning')" visible="@bind(not vm.documentLocked)" />
            <button id="cancel" label="Cancel" onClick="@command('cancelChanges')" visible="@bind(not vm.documentLocked)" />
        </hlayout>
    </div>
</vlayout>