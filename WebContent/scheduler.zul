<?init class="org.gobiiproject.datatimescope.services.AuthenticationInit"?>

<vlayout apply="org.zkoss.bind.BindComposer"
         viewModel="@id('vm') @init('org.gobiiproject.datatimescope.webconfigurator.WebConfigViewModel')" >
    <label>Scheduler - Cron Settings</label>
    <grid width="500px">
        <columns>
            <column align="right" hflex="min"/>
            <column hflex="min"/>
            <column/>
        </columns>
        <rows>
            <row>
                <cell sclass="row-title">Crop Name:</cell>
                <cell>
                    <listbox model="@load(vm.xmlHandler.cropList)" selectedItem="@bind(vm.currentCrop.name)"
                             width="200px" mold="select" disabled="@load(vm.documentLocked)">
                        <template name="model">
                            <listitem label="@load(each)" />
                        </template>
                    </listbox>
                </cell>
            </row>
            <row>
                <cell sclass="row-title">Cron File Age (Mins):</cell>
                <cell>
                    <intbox constraint="no negative, no empty : Please set a value between 1 and 59"
                             width="200px" value="@bind(vm.currentCrop.fileAge)" disabled="@load(vm.documentLocked)">
                    </intbox>
                </cell>
                <cell>
                    <image src="/home/fvgoldman/gobiidatatimescope/WebContent/imgs/gobiilogo.png" style="cursor: help" tooltip="fileAge">
                    </image>
                    <popup id="fileAge" width="200px">
                        <label value="Explanation here."/>
                    </popup>
                </cell>
            </row>
            <row>
                <cell sclass="row-title">Cron Interval (Mins):</cell>
                <cell>
                    <intbox constraint="no negative, no empty : Please set a value between 1 and 59"
                             width="200px" value="@bind(vm.currentCrop.cron)" disabled="@load(vm.documentLocked)">
                    </intbox>
                </cell>
                <cell>
                    <image src="/home/fvgoldman/gobiidatatimescope/WebContent/imgs/gobiilogo.png" style="cursor: help" tooltip="interval">
                    </image>
                    <popup id="interval" width="200px">
                        <label value="Explanation here."/>
                    </popup>
                </cell>
            </row>
        </rows>
    </grid>
    <div align="left">
        <button id="edit" label="Edit" onClick="@command('enableEdit')" visible="@bind(vm.documentLocked)" />
        <hlayout>
            <button id="save" label="Save" onClick="@command('reloadCrons')" visible="@bind(not vm.documentLocked)" />
            <button id="cancel" label="Cancel" onClick="@command('cancelChanges')" visible="@bind(not vm.documentLocked)" />
        </hlayout>
    </div>
</vlayout>